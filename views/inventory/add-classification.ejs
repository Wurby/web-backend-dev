<!-- Content Heading -->
<% if (title) { %>
<h1 class="contentHeader"><%= title %></h1>
<% } else { res.redirect('/') } %>
<!-- message section -->
<%- messages() %> <% if (errors) { %>
<ul class="alert alert-danger">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form class="form-card" action="/inv/add-classification" method="POST">
  <label
    >Add Classification
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      placeholder="eg., Coupe"
      required
      pattern="^[a-zA-Z]+$"
    />
    <p>
      Classification must be a single word with no special characters or spaces.
    </p>
  </label>
  <button type="submit">Add Classification</button>
</form>
